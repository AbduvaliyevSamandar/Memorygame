<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowFullscreen="true"
    android:orientation="vertical"
    android:background="@drawable/menu_back"
    tools:context=".activityes.Medium"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/arrow"
            android:layout_gravity="start"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:textColor="#090A0A"
            android:id="@+id/level"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Easy"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="start"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/img_6"
            />
        <TextView
            android:id="@+id/timemedium"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="00:00"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/baseline_volume_off_24"
            android:id="@+id/switchmedium"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:windowFullscreen="true">

        <ImageButton
            android:id="@+id/imageButton10"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageButton19"
            app:layout_constraintTop_toTopOf="@+id/imageButton9"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton12"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton13"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton20"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageButton18"
            app:layout_constraintTop_toTopOf="@+id/imageButton10"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton11"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageButton17"
            app:layout_constraintTop_toTopOf="@+id/imageButton10"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton9"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageButton16"
            app:layout_constraintStart_toStartOf="@+id/imageButton16"
            app:layout_constraintTop_toBottomOf="@+id/imageButton16"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton13"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton14"
            app:layout_constraintStart_toEndOf="@+id/imageButton12"
            app:layout_constraintTop_toTopOf="@+id/imageButton12"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton14"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton15"
            app:layout_constraintStart_toEndOf="@+id/imageButton13"
            app:layout_constraintTop_toTopOf="@+id/imageButton13"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton15"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton14"
            app:layout_constraintTop_toTopOf="@+id/imageButton14"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton16"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/imageButton12"
            app:layout_constraintTop_toBottomOf="@+id/imageButton12"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton19"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton16"
            app:layout_constraintEnd_toEndOf="@+id/imageButton13"
            app:layout_constraintTop_toTopOf="@+id/imageButton16"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton17"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton19"
            app:layout_constraintEnd_toEndOf="@+id/imageButton14"
            app:layout_constraintTop_toTopOf="@+id/imageButton19"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton18"
            style="@style/RoundedImageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton17"
            app:layout_constraintEnd_toEndOf="@+id/imageButton15"
            app:layout_constraintTop_toTopOf="@+id/imageButton17"
            app:srcCompat="@drawable/img" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>