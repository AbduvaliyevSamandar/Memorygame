<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowFullscreen="true"
    android:orientation="vertical"
    android:background="@drawable/menu_back"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/arrow"
            android:layout_gravity="start"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_arrow_back_24"
            />
        <TextView
            android:textColor="#090A0A"
            android:id="@+id/level"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Easy"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="start"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/img_6"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/time"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="00:00"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/switvhwiew"
            android:background="@drawable/baseline_volume_off_24"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:windowFullscreen="true"
        android:layout_gravity="center"
        >
        <ImageButton
            android:id="@+id/imageButton7"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton8"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton8"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6"
            app:layout_constraintStart_toEndOf="@+id/imageButton7"
            app:layout_constraintTop_toTopOf="@+id/imageButton7"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton6"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5"
            app:layout_constraintStart_toEndOf="@+id/imageButton8"
            app:layout_constraintTop_toTopOf="@+id/imageButton8"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton5"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton6"
            app:layout_constraintTop_toTopOf="@+id/imageButton6"
            app:srcCompat="@drawable/img"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton4"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageButton7"
            app:layout_constraintTop_toBottomOf="@+id/imageButton7"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton3"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton4"
            app:layout_constraintEnd_toEndOf="@+id/imageButton8"
            app:layout_constraintTop_toTopOf="@+id/imageButton4"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton2"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
            app:layout_constraintEnd_toEndOf="@+id/imageButton6"
            app:layout_constraintTop_toTopOf="@+id/imageButton3"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton1"
            style="@style/RoundedImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="@+id/imageButton5"
            app:layout_constraintTop_toTopOf="@+id/imageButton2"
            app:srcCompat="@drawable/img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>